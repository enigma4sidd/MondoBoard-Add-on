<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/ic_image"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:background="@drawable/mondo"
        />

    <TextView
        android:id="@+id/ic_t1"
        android:layout_toRightOf="@+id/ic_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dip"
        />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lay2"
    android:layout_below="@+id/lay1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_image2"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:background="@drawable/atob"
        />
    <TextView
        android:id="@+id/ic_t2"
        android:layout_toRightOf="@+id/ic_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        />
</RelativeLayout>
<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:id="@+id/lay3"
    android:layout_below="@+id/lay2"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/ic_image3"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:background="@drawable/bicycle"
        />
    <TextView
        android:id="@+id/ic_t3"
        android:layout_toRightOf="@+id/ic_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/ic_t4"
        android:layout_below="@+id/lay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_centerHorizontal="true" />
</RelativeLayout>